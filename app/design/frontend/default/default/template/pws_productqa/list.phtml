<div class="collateral-box">
    <div class="head">
    <h4><?php echo $this->__('Questions and Answers') ?></h4>
    </div>
    <div class="collateral-box" id="product-q-a">
        <p><strong><a href="#question-form" id="add-question"><?php echo $this->__('add your question'); ?></strong></a></p>
            <?php $entries = $this->getEntries(); ?>
