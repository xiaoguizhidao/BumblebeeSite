/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<?php if ($this->getIsNeedToDisplaySideBar()):?>
<div class="block block-cart">
    <?php $_cartQty = $this->getSummaryCount() ?>
    <div class="block-content">
    <?php if ($_cartQty>0): ?>
        <div class="summary">
            <?php if ($_cartQty==1): ?>
                <p class="amount"><?php echo $this->__('1 item  added to your shopping cart', $this->getUrl('checkout/cart')) ?></p>
            <?php else: ?>
                <p class="amount"><?php echo $this->__('<a href="%s">%s </a> items added to your shopping cart', $this->getUrl('checkout/cart'), $_cartQty) ?></p>
            <?php endif ?>
        </div>
    <?php endif ?>
    
    
    
    <?php $_items = $this->getRecentItems() ?>
    <?php if(count($_items)): ?>
        <p class="block-subtitle">Qty <strong style="text-indent:3px;  display:inline-block;">Product</strong> <strong style="text-indent:85px;  display:inline-block;">Price</strong></p>
        <ol id="cart-sidebar" class="mini-products-list">
        <?php foreach($_items as $_item): ?>
            <?php echo $this->getItemHtml($_item) ?>
        <?php endforeach; ?>
        </ol>
        <script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>
    <?php else: ?>
        <p class="empty"><?php echo $this->__('You have no items in your shopping cart.') ?></p>
    <?php endif ?>
    <div class="subtotalmini">
        <?php if ($this->canApplyMsrp()): ?>
                    <span class="map-cart-sidebar-total"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></span>
                <?php else: ?>
                    <h3><?php echo $this->__('Subtotal:') ?> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></h3>
                    <?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?>
                        <br />(<?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?>)
                    <?php endif; ?>
                <?php endif; ?>
    </div>
    <?php if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
    <div class="actions">
     <p style="float:left; padding-top:3px;"><a href="<?php echo $this->getUrl('')?>" style="color:#000 !important; text-transform:uppercase !important; font-weight:bold; font-size:14px;  text-decoration:none; padding-top:7px !important; text-indent:0 !important;">Keep Shopping</a></p>
        <?php echo $this->getChildHtml('extra_actions') ?>
        <p style="float:right;"><a onclick="setLocation('<?php echo $this->getCheckoutUrl() ?>')" style="cursor:pointer;"><img src="<?php echo $this->getSkinUrl('images/minicheckout.png')?>"></a></p>
    </div>
    <?php endif ?>
    </div>
</div>
<?php endif;?>
