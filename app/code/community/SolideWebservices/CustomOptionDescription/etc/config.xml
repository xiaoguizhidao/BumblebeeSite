<config>
	<modules>
		<SolideWebservices_CustomOptionDescription>
			<version>1.0.0</version>
		</SolideWebservices_CustomOptionDescription>
	</modules>
	<global>
		<blocks>
			<adminhtml>
				<rewrite>
					<catalog_product_edit_tab_options_option>SolideWebservices_CustomOptionDescription_Block_Adminhtml_Catalog_Product_Edit_Tab_Options_Option</catalog_product_edit_tab_options_option>
